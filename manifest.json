
{
  "manifest_version": 3,
  "name": "LinkedIn Job Logger",
  "version": "1.0",
  "description": "Extracts LinkedIn job data and copies it to clipboard or sends it to Google Sheets.",
  "permissions": ["activeTab", "scripting", "clipboardWrite", "notifications"],
  "host_permissions": [
    "https://script.google.com/*",
    "*://www.linkedin.com/jobs/view/*",
    "*://www.linkedin.com/jobs/collections/*"
  ],
  "commands": {
    "extract-job-data": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Extract job data and copy to clipboard"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.linkedin.com/jobs/view/*"],
      "js": ["content.js"]
    }
  ]
}
